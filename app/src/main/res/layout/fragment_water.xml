<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/water_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/container"
        android:text="Water Level"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#518e90"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/container"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="#ddded7" />

    <View
        android:id="@+id/water_level"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="#2196F3"
        android:layout_alignStart="@id/container"
        android:layout_alignBottom="@id/container" />

    <View
        android:id="@+id/marker_line"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="#ea5252"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/water_level_text"
        android:layout_alignStart="@id/container"
        android:layout_marginBottom="60dp" />

    <TextView
        android:id="@+id/marker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marker_line"
        android:layout_toEndOf="@id/marker_line"
        android:layout_alignTop="@id/marker_line"
        android:layout_marginStart="8dp"
        android:text="Good Amount"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/percentage_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:layout_alignStart="@id/container"
        android:layout_marginStart="66dp"
        android:layout_marginTop="7dp"
        android:text="0%"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/water_pump_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentage_indicator"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="8dp"
        android:text="Water Pump: OFF"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>